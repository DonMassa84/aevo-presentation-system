{
  "type": "object",
  "required": ["meta", "slides"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "duration_sec"],
      "properties": {
        "title": { "type": "string" },
        "duration_sec": { "type": "integer", "minimum": 1 }
      }
    },
    "slides": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "sec", "file"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "sec": { "type": "integer", "minimum": 1 },
          "file": { "type": "string" }
        }
      }
    }
  }
}
