#!/usr/bin/env bash
set -euo pipefail
BASE="$HOME/Bilder/AEVO_Unterweisung_Active_Directory_Nutzer_anlegen"
MASTER="$BASE/AEVO_Master_Slideshow_JPG"
systemctl --user stop wallpaper-passive-slideshow.service 2>/dev/null || true
"$HOME/.local/bin/wallpaper-passive-slideshow.sh" "$MASTER" 120 &
notify-send "AEVO Master Modus" "105 Slides | Komplett" -t 2500 || true
