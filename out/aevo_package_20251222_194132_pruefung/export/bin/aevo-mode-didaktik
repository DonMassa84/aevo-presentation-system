#!/usr/bin/env bash
set -euo pipefail
SVC="aevo-wallpaper-loop.service"
DROP_DIR="$HOME/.config/systemd/user/aevo-wallpaper-loop.service.d"
mkdir -p "$DROP_DIR"
printf '%s\n' '[Service]' 'Environment=AEVO_MODE=didaktik' > "$DROP_DIR/mode.conf"
systemctl --user daemon-reload >/dev/null 2>&1 || true
systemctl --user reset-failed "$SVC" >/dev/null 2>&1 || true
systemctl --user restart "$SVC" >/dev/null 2>&1 || true
echo "AEVO_MODE=didaktik (Service restart versucht)"
